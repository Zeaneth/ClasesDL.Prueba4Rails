<div class="row">
  <div class="col-md-4 ml-2 mt-3">
    <h2>Registrar Usuario</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
  
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Ingrese su dirección de email aquí", class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :avatar_photo %><br />
        <%= f.text_field :avatar_photo, placeholder: "Ingrese la Url de una foto propia aquí", class:"form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :password, "Contraseña" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Ingrese su contraseña aquí", class:"form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "Confirmación de Contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Vuelva a ingresar su contraseña aquí", class:"form-control" %>
      </div>
    
      <div class="actions mt-2">
        <%= f.submit "Registrarse", class: 'btn btn-primary' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>