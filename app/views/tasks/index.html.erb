<div class="jumbotron">
  <h1 class="text-center font-weight-bold" style="font-size: 2.5em">TAREAS DIECIOCHERAS</h1>
</div>
<div class="container-fluid">
  <% @tasks.each do |task| %>
    <div class="col-md-4 col-lg-3 col-sm-12 float-left">
      <div class="card mb-2 mt-2">
        <%= image_tag task.photo, class:'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title text-center"><%= task.name %></h5>
          <% if user_signed_in? %>
            <h6 class="card-text text-center"><%= current_user.last_done(task.id) %></h5>
          <% end %>
        </div>
        <div class="btn-group align-self-center mb-2">
          <% if user_signed_in? %>  
            <% if task.completed?(current_user.id) %>
              <%= link_to "Deshacer", task_todos_path(task), method: :post, class: "btn btn-danger" %>
              <% else %>
              <%= link_to "Completar", task_todos_path(task), method: :post, class: "btn btn-success" %>
            <% end %>
          <% end %>
          <%= link_to "Ranking", tasks_ranking_path(task), method: :get, class: "btn btn-warning" %>
        </div>
      </div>
    </div>
    <div class="w-100" style="margin-top: 3rem"> </div>
  <% end %>
</div>