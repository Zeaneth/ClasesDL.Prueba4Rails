<h1>Tareas :)</h1>
<div class="container">
  <div class="row">
    <% @tasks.each_slice(3) do |row| %>
      <% row.each do |task| %>
        <div class="col">
          <div class="card">
            <%= image_tag task.photo, class:'card-img-top' %>
            <div class="card-body">
              <h5 class="card-title text-center"><%= task.name %></h5>
              <% if user_signed_in? %>
                <h6 class="card-text text-center"><%= current_user.last_done(task.id) %></h5>
              <% end %>
            </div>
            <div class="btn-group mx-auto mb-2">
              <% if user_signed_in? %>  
                <% if task.completed?(current_user.id) %>
                  <%= link_to "Deshacer", task_todos_path(task), method: :post, class: "btn btn-danger" %>
                  <% else %>
                  <%= link_to "Completar", task_todos_path(task), method: :post, class: "btn btn-success" %>
                <% end %>
              <% end %>
              <%= link_to "Ranking", task_todos_path(task), method: :post, class: "btn btn-warning" %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top: 3rem"> </div>
    <% end %>
  </div>
</div>